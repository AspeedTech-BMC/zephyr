/dts-v1/;
#include <aspeed/ast10x0.dtsi>

/ {
	model = "Aspeed AST1060 Evaluation board";
	compatible = "aspeed,bic-ast1030", "aspeed,ast1030";

	chosen {
		zephyr,console = &uart5;
		zephyr,shell-uart = &uart5;
		zephyr,sram = &sram0;
	};
};

&sram0 {
	reg = <0 DT_SIZE_K(448)>, <0x70000 DT_SIZE_K(320)>;
};

&uart5 {
	clock-frequency = <1846153>;
	current-speed = <115200>;
	status = "okay";
};

&fmc {
	status = "okay";
};

&fmc_cs0 {
	status = "okay";
	spi-max-buswidth = <4>;
	spi-max-frequency = <50000000>;
};

&fmc_cs1 {
	status = "okay";
	spi-max-buswidth = <4>;
	spi-max-frequency = <50000000>;
};

&spi1_cs0 {
	spi-max-buswidth = <4>;
	spi-max-frequency = <50000000>;
	reg = <0>;
	status = "okay";
};

&spi1_cs1 {
	spi-max-buswidth = <4>;
	spi-max-frequency = <50000000>;
	reg = <1>;
	status = "okay";
};

&spi1 {
	internal-mux-reg = <0x7e6e20f0>;
	internal-mux-mask = <0xf>;
	num-cs = <1>;
	status = "okay";

	spi1_cs2: flash@2 {
		compatible = "jedec,spi-nor";
		reg = <2>;
		spi-max-buswidth = <4>;
		spi-max-frequency = <50000000>;
		label = "spi1_cs2";
		status = "okay";
	};

	spi1_cs3: flash@3 {
		compatible = "jedec,spi-nor";
		reg = <3>;
		spi-max-buswidth = <4>;
		spi-max-frequency = <50000000>;
		label = "spi1_cs3";
		status = "okay";
	};
};

&wdt1 {
	status = "okay";
};

&wdt2 {
	status = "okay";
};

&wdt3 {
	status = "okay";
};

&wdt4 {
	status = "okay";
};

&spim1 {
	valid-cmds = [03 13 0b 0c 6b 6c 01 05 35 06 04 20 21 9f 5a b7 e9 32 34 d8 dc];
	read-forbidden-regions = <0x00000000 0x10000>;
	write-forbidden-regions = <0x00000000 0x10000>;
	log-ram-info = <0xBF000 0x400>;
	pinctrl-0 = <&pinctrl_spim1_default>;
	status = "okay";
};

&spim2 {
	valid-cmds = [03 13 0b 0c 6b 6c 01 05 35 06 04 20 21 9f 5a b7 e9 32 34 d8 dc];
	read-forbidden-regions = <0x00000000 0x10000>;
	write-forbidden-regions = <0x00000000 0x10000>;
	log-ram-info = <0xBF400 0x400>;
	pinctrl-0 = <&pinctrl_spim2_default>;
	status = "okay";
};

&spim3 {
	valid-cmds = [03 13 0b 0c 6b 6c 01 05 35 06 04 20 21 9f 5a b7 e9 32 34 d8 dc];
	read-forbidden-regions = <0x00000000 0x10000>;
	write-forbidden-regions = <0x00000000 0x10000>;
	log-ram-info = <0xBF800 0x400>;
	pinctrl-0 = <&pinctrl_spim3_default>;
	status = "okay";
};

&spim4 {
	valid-cmds = [03 13 0b 0c 6b 6c 01 05 35 06 04 20 21 9f 5a b7 e9 32 34 d8 dc];
	read-forbidden-regions = <0x00000000 0x10000>;
	write-forbidden-regions = <0x00000000 0x10000>;
	log-ram-info = <0xBFC00 0x400>;
	pinctrl-0 = <&pinctrl_spim4_default>;
	status = "okay";
};

