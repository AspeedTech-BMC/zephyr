/delete-node/ &mcp3204;

&mikrobus_spi {
	status = "okay";

	/* LPCXpresso55S16 uses SSEL1 for mikroBUS SPI */
	mcp3204: mcp3204@1 {
		compatible = "microchip,mcp3204";
		reg = <0x1>;
		spi-max-frequency = <100000>;
		label = "MCP3204";
		#io-channel-cells = <1>;
	};
};
